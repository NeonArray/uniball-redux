{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es2015",
        "moduleResolution": "node",
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "no-trailing-whitespace": false,
                "comment-format": [false, "check-uppercase"]
            }
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
